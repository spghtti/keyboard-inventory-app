<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/reset.css" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="shortcut icon" href="/images/favicon-16x16.png" />
    <title><%= title %></title>
</head>
<body>
  <%- include('sidebar') -%>
  <div class="wrapper">
    <div class="header">
    <h1><%- title %></h1>
    <% if (locals.brand_keyboards.length) { %>
    <p class="error">You must delete a brand's keyboards before deleting the brand.</p>
    </div>
    <div>
        <h3 class="headline">Keyboards:</h3>
        <ul>
            <% brand_keyboards.forEach((keyboard) => { %> 
                <a href="<%= keyboard.url %>" class="list-link">
                <div class="list-row">
                <span class="strong"><li><%- keyboard.name %></li></span>
                </div>
                </a>
            <% })  %> 
        </ul>
    </div> 
    <% } else { %>
        <p class="description">Do you really want to delete this brand?</p>
        <form method="POST" action="">
            <div class="form-group">
                <div class="detail-buttons-container">
                <input id="brandid"class='form-control' type="hidden" name="brandid" required="true" value="<%- brand._id %>">
                <button class="delete" type="submit">Delete</button>
                </div>
            </div>
        </form>
        <a href="<%= brand.url  %>" class="text-link">Take me back!</a>
        <% } %> 
  </div>
</body>

</html>